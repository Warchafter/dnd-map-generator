---
const navLinks = [
  { label: "Home", href: "/home" },
  { label: "Generator", href: "/map-generator"},
  { label: "Showcase", href: "/showcase" },
  { label: "Saved", href: "/saved"},
];
---

<nav class="px-2">
  <div class="flex justify-between items-center text-stone-50">
    <div class="text-xl font-bold">
      <a href="/" class="hover:text-purple-500">DnD Map Generator</a>
    </div>
    <div>
      <ul class="flex space-x-6 font-medium">
        {
          navLinks.map((link, index) => (
            <li>
              <a href={link.href} class="hover:bg-purple-600">
                {link.label}
              </a>
              {index !== navLinks.length - 1 && <span class="ml-4">/</span>}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
