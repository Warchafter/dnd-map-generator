---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import ProfileStatsCard from "../components/profile/ProfileStatsCard.astro";
import ProfileSocials from "../components/profile/ProfileSocials.astro";
import ProfileStatus from "../components/profile/ProfileStatus.astro";
import ProfileAboutMe from "../components/profile/ProfileAboutMe.astro";
import ProfileLatestProjects from "../components/profile/ProfileLatestProjects.astro";
import ProfileWorkExperience from "../components/profile/ProfileWorkExperience.astro";
---

<Layout>
  <div class="flex flex-col mx-auto max-w-7xl gap-8 py-8">
    <Navbar />
    <div
      class="grid grid-cols-7 grid-rows-auto text-slate-50 gap-10 items-start"
    >
      <div class="grid col-span-2 gap-8">
        <ProfileStatsCard />
        <ProfileSocials />
        <ProfileStatus />
      </div>
      <div class="grid col-span-5 col-start-3 gap-8">
        <ProfileAboutMe />
        <ProfileLatestProjects />
        <ProfileWorkExperience />
      </div>
    </div>
  </div>
</Layout>
